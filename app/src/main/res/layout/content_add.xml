<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AddActivity"
    tools:showIn="@layout/activity_add">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toTopOf="@+id/imgAddButton"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@color/colorAccent" />

    <Button
        android:id="@+id/imgAddButton"
        android:layout_width="79dp"
        android:layout_height="40dp"
        android:text="사진등록"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="215dp" />

    <TextView
        android:id="@+id/nameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="100dp"
        android:text="이름"
        android:textSize="12sp"
        app:layout_constraintEnd_toStartOf="@+id/name"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="265dp" />

    <EditText
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="이름을 입력하세요."
        android:inputType="text"
        android:maxLength="100"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/nameTextView"
        app:layout_constraintTop_toBottomOf="@+id/imgAddButton" />

    <TextView
        android:id="@+id/kindTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="종류"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/kind"
        android:layout_width="368dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="예) 산세베리아, 선인장 "
        android:inputType="textPersonName"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/picView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="사진"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp" />

    <TextView
        android:id="@+id/introView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="소개"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/intro"
        android:layout_width="368dp"
        android:layout_height="47dp"
        android:ems="10"
        android:gravity="top"
        android:hint="식물에 대한 소개를 적어주세요."
        android:inputType="textMultiLine"
        android:lines="3"
        android:maxLines="3"
        android:minLines="3"
        android:textSize="12sp"
        tools:layout_editor_absoluteX="122dp"
        tools:layout_editor_absoluteY="458dp" />

    <TextView
        android:id="@+id/waterTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="물주기 설정"
        tools:layout_editor_absoluteX="38dp"
        tools:layout_editor_absoluteY="486dp" />

    <DatePicker
        android:id="@+id/datepicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:datePickerMode="calendar"
        android:visibility="invisible"
        tools:layout_editor_absoluteY="2dp" />

    <TextView
        android:id="@+id/startDate"
        android:layout_width="82dp"
        android:layout_height="19dp"
        android:visibility="visible"
        tools:layout_editor_absoluteX="239dp"
        tools:layout_editor_absoluteY="497dp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="일 부터"
        tools:layout_editor_absoluteY="540dp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="165dp"
        android:layout_height="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:layout_editor_absoluteY="523dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="마다"
        tools:layout_editor_absoluteX="346dp"
        tools:layout_editor_absoluteY="540dp" />

</androidx.constraintlayout.widget.ConstraintLayout>